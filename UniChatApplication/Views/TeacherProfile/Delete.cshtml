@model UniChatApplication.Models.TeacherProfile

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        font-family: 'Times New Roman', Times, serif;
        font-size: 1.2rem;
    }

    table {
        max-width: 800px;
    }

    h1 {
        font-weight: 600;
    }

    th,
    td {
        width: 50%;
    }

    .control {
        display: flex;
        gap: 1rem;
    }

    img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin: auto;
    }
</style>
<div class="container">
    <h1 class="text-center">Teacher Management</h1>
    <hr>
    <div class="p-2 text-danger">
        <h4><i>Do you want to complete delete?</i></h4>
    </div>
    <table class="table table-bordered table-sm">
        <tbody>
            <tr>
                <th>Avatar</th>
                <td>
                    <img src="@Model.Avatar" alt="Avatar">
                </td>
            </tr>
            <tr>
                <th>Username</th>
                <td>@Model.Account.Username</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>@Model.Birthday</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.GenderText</td>
            </tr>
            <tr>
                <th>TeacherCode</th>
                <td>@Model.TeacherCode</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete" class="d-flex" style="gap: 1rem;">
        <input type="hidden" asp-for="Id" />

        <a class="btn btn-danger" asp-action="Index">Back to List</a>
        <input type="submit" value="Delete" class="btn btn-outline-danger"/>
    </form>
</div>
