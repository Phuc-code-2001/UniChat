@model UniChatApplication.Models.TeacherProfile

@{
    ViewData["Title"] = "Create";
}

<style>

    body {
        font-family: 'Times New Roman', Times, serif;
        font-size: 1.2rem;
    }

    .main-control {
        display: flex;
        flex-direction: column;
        gap: .5rem;
        padding: 1rem;
        max-width: 800px;
        margin: auto;
    }

    h1 {
        font-weight: 600;
    }

    table thead {
        background-color: blueviolet;
        color: #eee;
    }

    select {
        width: 100%;
        padding: .5rem;
        border-radius: 5px;
        margin-top: .5rem;
        border: 1px solid #ced4da;
    }
    
</style>

<div class="container mt-3">
    <h1 class="text-center">Teacher Management</h1>
    <h4>Create Teacher account</h4>
    @{
        if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger">
                <strong>@ViewData["Error"]</strong>
            </div>
        }
    }
    <div class="main-control">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label class="control-label">FullName</label>
                <input type="text" class="form-control" name="newFullName" value="@Model.FullName">
                <span class="text-danger" id="validateFullName"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="email" class="form-control" name="newEmail" value="@Model.Email">
                <span class="text-danger" id="validateEmail"></span>
            </div>
            <div class="form-group">
                <div>Gender</div>
                <select name="newGender">
                    <option value="true">Male</option>
                    <option value="false">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">TeacherCode</label>
                <input type="text" class="form-control" name="newTeacherCode" value="@Model.TeacherCode">
                <span class="text-danger" id="validateTeacherCode"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a class="btn btn-outline-danger" asp-action="Index">Back to List</a>
        </div>

    </div>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
