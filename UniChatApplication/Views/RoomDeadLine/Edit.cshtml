@{
    ViewData["Title"] = "Edit";
}

@model RoomDeadLine

<div class="container">

    <h2>Edit deadline</h2>

    <h4>
        <span>RoomChat:</span>
        <span class="text-primary">@Model.RoomChat.Class.Name - @Model.RoomChat.Subject.FullName</span>
    </h4>

    <h6>DeadlineId: @Model.Id</h6>

    <form asp-action="ConfirmEdit" asp-route-id="@Model.Id" method="Post">
        @if (ViewBag.Error != null){
            <div class="alert alert-danger alert-dismissible"  style="padding: 1rem;">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@ViewBag.Error</strong>
            </div>
        }
        <input type="hidden" asp-for="RoomId">
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="ExpirationTime"></label>
            <input type="datetime-local" name="ExpirationTime" value="@ViewBag.ExpirationTime">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Edit">
        </div>
    </form>
    

    
    <a class="btn btn-danger" asp-action="View" asp-route-RoomId="@Model.RoomId">Back</a>

</div>