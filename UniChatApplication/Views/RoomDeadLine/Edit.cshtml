@{
    ViewData["Title"] = "Edit";
}

@model RoomDeadLine

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: monospace, sans-serif;
    }

    .container {
        display: flex;
        flex-direction: column;
        margin-top: 60px;
        padding: 2rem;
        box-shadow: 0 0 5px 1px blue;
        border-radius: 5px;
    }


</style>

<div class="container">


    <h2 class="text-center text-primary font-weight-bold">Edit Deadline</h2>
    <div>
        <a class="button-3 text-white text-decoration-none" asp-action="View" asp-route-RoomId="@Model.RoomId">Back</a>
    </div>
    
    <h4 class="text-center">
        <span class="text-success">@Model.RoomChat.Class.Name - @Model.RoomChat.Subject.FullName</span>
    </h4>

    <form asp-action="ConfirmEdit" asp-route-id="@Model.Id" method="Post">
        @if (ViewBag.Error != null){
            <div class="alert alert-danger alert-dismissible"  style="padding: 1rem;">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@ViewBag.Error</strong>
            </div>
        }
        <input type="hidden" asp-for="RoomId">
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Content"></label>
            <textarea class="form-control" asp-for="Content" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="ExpirationTime"></label>
            <input class="form-control" type="datetime-local" name="ExpirationTime" value="@ViewBag.ExpirationTime">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Edit">
        </div>
    </form>

</div>