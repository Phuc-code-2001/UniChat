            </div>
        </div>
    </div>
</div>


<script>

    $(document).ready(function () {

        $(".chat-box").hide();

        $(".pin").hide();

        $(".btn-pin").hide();


        $(".display-pin").click(function (e) {

            let namePin = $(this).attr("name");

            $('.pin[name="' + namePin + '"]').toggle('slow');
        });

        $(".friend-drawer").click(function (e) {

            @* Set all chatbox and pin == hide *@
            $(".chat-box").hide();
            $(".pin").hide();

            
            $(".btn-pin").show(); 

            @* set name by friend drawer *@
            let idb = $(this).attr("name");

            @* show chat box by name friend drawer *@
            $('.chat-box[name="' + idb + '"]').toggle('slow');
            
            $(".display-pin").attr("name", idb);

        });

    });

</script>