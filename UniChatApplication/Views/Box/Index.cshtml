                    <div class="setting-tray">
                        <div class="row">
                            <form class="col-sm-12 d-flex justify-content-center" id="send-form">
                                <input type="text" name="message" class="form-control" placeholder="Text...">
                                <button class="btn btn-success"> <i class="fa fa-paper-plane"></i></button>
                            </form>
