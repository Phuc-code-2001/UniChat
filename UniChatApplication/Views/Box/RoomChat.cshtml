@model IEnumerable<RoomChat>
@{
    ViewData["Title"] = "BoxChat";
}

<link rel="stylesheet" href="~/css/Box/StyleIndex.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="background">
    <div class="container">
        <div class="row no-gutters border ">
            @************************* User (Left) **************************** *@
            <div class="col-sm-4 user border-right">
                @* User tools include: profile and logout *@
                <div class="setting-tray">
                    <div class="d-flex justify-content-between">
                        @* Profile *@
                        <button class="btn btn-success"> <i class="fa fa-user"></i> </button>
                        @* Logout *@
                        <button class="btn btn-danger"> <i class="fa fa-power-off"></i> </button>
                    </div>
                </div>

                @* Drawer *@

                @* ------------------ Room chat -------------------- *@

                <div class="row border border-dark rounded m-2 p-1">
                    <div class="col-sm-10 ">
                        <h4>Room Chat</h4>
                    </div>
                    <div class="col-sm-2 d-flex align-items-center justify-content-center ">
                        <button class="btn  btn-primary btn-sm "> <i class="fa fa-plus"></i> </button>
                    </div>
                </div>

                @* Scroller for room chat *@
                <div class="scroller">
                    @* Friend drawer *@
                    @foreach (RoomChat item in Model)
                    {
                        <a asp-action="RoomChat" asp-route-id="@item.Id" class="friend-drawer text-decoration-none" name="room-link-@item.Id">
                            @* Room avatar *@
                            <img class="profile-image"
                                src="https://www.ecoblader.com/wp-content/uploads/2013/02/ecoblader-facebook.jpg" alt="">
                            @* Room name *@
                            <div class="friend-drawer-text d-flex align-items-center">
                                <h6>@item.Subject.SubjectCode</h6>
                            </div>
                            @* Time last chat in room *@
                            <p class="time text-muted small">13:21</p>
                        </a>
                        <hr>
                    }
                </div>
                @* ------------------ Group chat -------------------- *@
                <div class=" border border-dark rounded m-2  p-1 pl-3">
                    <h4>Group Chat</h4>
                </div>
                @* Scroller for group chat *@
                <div class="scroller">
                    @* Friend drawer *@
                    <a class="friend-drawer text-decoration-none" name="group-draw1">

                        <img class="profile-image"
                            src="https://www.ecoblader.com/wp-content/uploads/2013/02/ecoblader-facebook.jpg" alt="">

                        <div class="friend-drawer-text d-flex align-items-center">
                            @* Name group *@
                            <h6>TranVanHao</h6>
                        </div>
                        @* Time last chat in group *@
                        <p class="time text-muted small">13:21</p>
                    </a>
                    <hr>
                </div>
            </div>

            @* ************************ Chat (Right)) **************************** *@
            <div class="col-sm-8 chat">
                @* Message pin and deadline pin *@

                @* pin *@
                <div>
                    <div class="row pin setting-tray" name="room-draw1">
                        @* Message pin *@
                        <div class="col-sm-8" >
                            <h6>Message pin:</h6>
                            <p>Bang Loz</p>
                        </div>
                        @* Deadline pin *@
                        <div class="col-sm-4 d-flex align-items-center justify-content-center" >
                            <button class="btn btn-outline-danger"> Deadline </button>
                        </div>
                    </div>
                </div>

                @* Button for show and hide pin *@
                <div class="col-sm-1 display-pin d-flex align-items-center justify-content-center"
                    style="z-index: 99; position: absolute;" name="room-@ViewBag.RoomChat.Id">
                    <button class="btn btn-secondary btn-pin btn-sm"> <i class="fa fa-plus"></i> </button>
                </div>

                @* Chat main *@
                <div class="chat-container scroller-chat">

                    <ul class="chat-box" name="room-@ViewBag.RoomChat.Id">

                        <li class="d-none" id="chat-left">
                            @* User avatar and name *@
                            <div class="chat-avatar">
                                <img src="https://www.bootdey.com/img/Content/avatar/avatar3.png" alt="Retail Admin">
                                <div class="chat-name"></div>
                            </div>

                            @* Stranger message *@
                            <div class="chat-text">
                                <p></p>
                            </div>
                            @* Stranger chat time *@
                            <div class="chat-hour"></div>
                        </li>

                        <li class="d-none" id="chat-right">
                            @* User chat time *@
                            <div class="chat-hour"></div>
                            @* User message *@
                            <div class="chat-text">
                                <p></p>
                            </div>
                            @* User avatar and name *@
                            <div class="chat-avatar">
                                <img src="https://www.bootdey.com/img/Content/avatar/avatar3.png" alt="Retail Admin">
                                <div class="chat-name"></div>
                            </div>
                        </li>

                        @foreach (RoomMessage item in ViewBag.RoomChat.Messages)
                        {
                            if(item.AccountID == ViewBag.LoginUser.Id){
                                <li class="chat-right">
                                    @* User chat time *@
                                    <div class="chat-hour">@item.TimeMessage.ToShortTimeString()</div>
                                    @* User message *@
                                    <div class="chat-text">
                                        @item.Content
                                    </div>
                                    @* User avatar and name *@
                                    <div class="chat-avatar">
                                        <img src="https://www.bootdey.com/img/Content/avatar/avatar3.png" alt="Retail Admin">
                                        <div class="chat-name">Me</div>
                                    </div>
                                </li>
                            }
                            else {
                                <li class="chat-left">
                                    <div class="chat-avatar">
                                        <img src="https://www.bootdey.com/img/Content/avatar/avatar3.png" alt="Retail Admin">
                                        <div class="chat-name">@item.Account.Username</div>
                                    </div>
                                    <div class="chat-text">
                                        @item.Content
                                    </div>
                                    <div class="chat-hour">@item.TimeMessage.ToShortTimeString()</div>
                                </li>
                            }
                        }
                    </ul>

                </div>
                <div class="setting-tray">
                    <div class="row">
                        <form class="col-sm-12 d-flex justify-content-center" id="send-form">
                            <input type="text" name="message" class="form-control" placeholder="Text...">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-paper-plane"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script>

    $(document).ready(function () {

        $(".pin").hide();

        $(".btn-pin").hide();

        $(".display-pin").click(function (e) {

            let namePin = $(this).attr("name");

            $('.pin[name="' + namePin + '"]').toggle('slow');
        });

        const connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();
        connection.on("GetRoomMessage", function (username, message) {

            if(username == "@ViewBag.LoginUser.Username"){
                let li = $("#chat-right").clone();
                li.removeAttr("id");
                li.attr("class", "chat-right");
                li.find(".chat-hour").text("@DateTime.Now.ToShortTimeString()");
                li.find(".chat-text").text(message);
                li.find(".chat-name").text("Me");
                li.appendTo($(".chat-box"));
            }
            else{
                let li = $("#chat-left").clone();
                li.removeAttr("id");
                li.attr("class", "chat-left");
                li.find(".chat-hour").text("@DateTime.Now.ToShortTimeString()");
                li.find(".chat-text").text(message);
                li.find(".chat-name").text(username);
                li.appendTo($(".chat-box"));
            }

        });

        connection.start().then(function(){
            connection.invoke("JoinRoom", @ViewBag.RoomChat.Id);
        });

        $("#send-form").submit(function (e) {
            let username = "@ViewBag.LoginUser.Username";
            let message = $("input[name='message']").val();
            if (message != "") connection.invoke("SendMessage", username, message, @ViewBag.RoomChat.Id);
            $("input[name='message']").val("");
            e.preventDefault();
        });

    })

</script>