@{
    ViewData["Title"] = "UpdatePassword";
}
@model Account
<form asp-action="UpdatePassword" method="Post">
    <div class="form-group">
        @if(TempData["UpdatePasswordStatus"] != null) {
            @if ((bool) TempData["UpdatePasswordStatus"]){
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@TempData["UpdatePasswordMessage"]</strong>
                </div>
            }
            else {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@TempData["UpdatePasswordMessage"]</strong>
                </div>
            }
        }
    </div>
    <div class="form-group">
        <label for="oldPassword">Old Password</label>
        <input type="password" name="oldPassword" id="oldPassword">
    </div>
    <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password" name="newPassword" id="newPassword">
    </div>
    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword">
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-danger">Back</a>
        <input type="submit" value="Update" class="btn btn-success">
    </div>

</form>