@model UniChatApplication.Models.StudentProfile

@{
    ViewData["Title"] = "Details";
}

<style>

    body {
        font-family: 'Times New Roman', Times, serif;
        font-size: 1.2rem;
    }

    table {
        max-width: 800px;
    }

    th,
    td {
        width: 50%;
    }

    .control {
        display: flex;
        gap: 1rem;
    }

    img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin: auto;
    }

</style>

<div class="container">

    <h2>Student Management</h2>
    <h4>Details</h4>
    <hr>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Avatar</th>
                <td>
                    <img src="@Model.Avatar" alt="Avatar">
                </td>
            </tr>
            <tr>
                <th>Username</th>
                <td>@Model.Account.Username</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>@Model.Birthday</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.GenderText</td>
            </tr>
            <tr>
                <th>Major</th>
                <td>@Model.Major</td>
            </tr>
            <tr>
                <th>StudentCode</th>
                <td>@Model.StudentCode</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>
                    @{
                        if (Model.getClassName() != null)
                        {
                            <span>@Model.getClassName()</span>
                        }
                        else {
                            <span>Unset</span>
                        }
                    }
                </td>
            </tr>
        </tbody>
    </table>
    <div class="control">
        <a class="btn btn-danger" asp-action="Index">Back to list</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</div>