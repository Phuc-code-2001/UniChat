@model Subject

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: 'Times New Roman', Times, serif;
    }

    h1 {
        font-weight: 600;
    }

    table {
        text-align: center;
        max-width: 800px;
        margin: auto;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
</style>

<div class="container">

    <h1 class="text-center">Subject Management</h1>
    <div class="d-flex" style="gap: 1rem;">
        <h4>Are you sure delete subject @Model.SubjectCode?</h4>
        <form asp-action="Delete">
            <input type="hidden" name="id" value="@Model.Id">
            <input type="submit" value="Confirm" class="btn btn-danger btn-sm">
        </form>
    </div>
    <hr>
    <div class="info">
        <h4 class="text-center">Rooms Chat related to @Model.SubjectCode - @Model.FullName</h4>
        <table class="table table-bordered table-sm">
            <thead>
                <th>ID</th>
                <th>Class</th>
                <th>Teacher</th>
                <th>Number of students</th>
                <th>Number of groups</th>
            </thead>
            <tbody>

            </tbody>
        </table>
        <div class="">
            <a asp-action="Index" class="btn btn-outline-danger btn-sm">Back</a>
        </div>
    </div>

</div>