@{
    ViewData["Title"] = "Create";
}

@model Subject

<style>

    body {
        font-family: 'Times New Roman', Times, serif;
        font-size: 1.2rem;
    }

    h1 {
        font-weight: 600;
    }

    form {
        max-width: 800px;
        margin: auto;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    input {
        padding: .5rem 1rem;
        border-radius: 5px;
    }

</style>

<div class="container">

    <h1 class="text-center">Subject Management</h1>
    <h5>Add New Subject</h5>
    <hr>
    <form asp-action="Create">
        <input type="text" asp-for="SubjectCode" placeholder="SubjectCode">
        <span class="text-danger" asp-validation-for="SubjectCode"></span>
        <input type="text" asp-for="FullName" placeholder="FullName">
        <span class="text-danger" asp-validation-for="FullName"></span>
        <button class="btn btn-success" type="submit">Add</button>
    </form>
    <div class="pt-5">
        <a class="btn btn-danger" asp-controller="Subject" asp-action="Index">Back to Index</a>
    </div>
</div>