@model IEnumerable<UniChatApplication.Models.Class>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: 'Times New Roman', Times, serif;
        padding: 1rem;
    }

    h1 {
        font-weight: 600;
    }
</style>

<div class="container">

    <h1 class="text-center">Classes Management</h1>

    <div class="main-control">
        <div class="create">
            <a class="btn btn-outline-primary" asp-action="Create">Create</a>
        </div>
        <hr>
        <table class="table table-bordered text-center">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Number of students</th>
                    <th>Configure</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.StudentProfiles.Count</td>
                        <td class="d-flex justify-content-center" style="gap: 1rem;">
                            <a asp-controller="Class" asp-action="Edit" asp-route-id="@item.Id" 
                            class="btn btn-primary" >Edit</a>
                            <a asp-controller="Class" asp-action="Details" asp-route-id="@item.Id"
                            class="btn btn-info">Details</a>
                            <a asp-controller="Class" asp-action="Delete" asp-route-id="@item.Id"
                            class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-sm btn-outline-danger" asp-controller="Admin" asp-action="Index">Back to Admin Page</a>
        </div>
    </div>
</div>